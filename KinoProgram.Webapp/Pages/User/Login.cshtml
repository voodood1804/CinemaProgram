@page
@model KinoProgram.Webapp.Pages.User.LoginModel
@section head{
    <style>
        .login-div{
            width: 50%;
            height: 300px;
            border: 2px solid #c7c3c3;
            border-radius: 25px;
            margin: auto;
            margin-top: 18%;
            padding: 20px;
            background-color: #f7f7f5;
        }
        

        center
    </style>
}
@{
    <script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById('password');
        var showPasswordToggle = document.getElementById('showPasswordToggle');

        if (showPasswordToggle.checked) {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    }
</script>
}
<div class="d-sm-table login-div" style="border-spacing: 0px 10px">
        <div class="center">
        <h3>Login</h3>
    </div>
    <form method="post">
        <div class="d-sm-table-row">
            <div class="d-sm-table-cell"><span class="me-3 fw-bold">Username</span></div>
            <div class="d-sm-table-cell">
                <input class="form-control" asp-for="Username" />
                <small><span class="text-danger" asp-validation-for="Username"></span></small>
            </div>
        </div>
        <div class="d-sm-table-row">
        <div class="d-sm-table-cell"><span class="me-3 fw-bold">Password</span></div>
            <div class="d-sm-table-cell">
                <input class="form-control" type="password" asp-for="Password" id="password" />
                <input type="checkbox" id="showPasswordToggle" onclick="togglePasswordVisibility()" />
                <label for="showPasswordToggle">Show password</label>
                <small><span class="text-danger" asp-validation-for="Password"></span></small>
            </div>
        </div>
        <div class="d-sm-table-row">
            <div class="d-sm-table-cell"></div>
            <div class="d-sm-table-cell">
                @if (Model.IsDevelopment)
                {
                    <small>Note: In development mode, the user "admin" is valid with any password that has a minimum of 3 characters.</small>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="mt-3">
                <span class="text-danger fw-bold">@Model.Message</span>
            </div>
        }

        <div class="mt-3">
            <button class="btn btn-primary">Login</button>
        </div>
    </form>
</div>

